<Window x:Class="Курсовая1._0.EditTeacherPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая1._0"
        mc:Ignorable="d"
        Title="EditTeacherPage" Height="250" Width="400">
    <Grid Margin="0,0,0,2">
        <TextBox Name="TeacherName"  HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="20"/>
        <Button Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="110" Height="24" Margin="0,153,0,0" Click="Button_Click"/>
        <Label Content="Введите ФИО преподавателя" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" FontWeight="Bold"/>

    </Grid>
</Window>
